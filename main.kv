<MainScreen>
    MDBoxLayout:
        orientation: 'vertical'
        MDTopAppBar:
            type: "small"

            MDTopAppBarLeadingButtonContainer:

                MDActionTopAppBarButton:
                    icon: "menu"

            MDTopAppBarTitle:
                text: "Задачи"
                pos_hint: {"center_x": .5}

            MDTopAppBarTrailingButtonContainer:

                MDActionTopAppBarButton:
                    icon: "dots-vertical"

        MDDivider:
            size_hint_x: 1
            pos_hint: {'center_x': .5, 'center_y': .5}
        MDFloatLayout:
            MDScrollView:
                do_scroll_x:False
                do_scroll_y:True
                MDList :
                    id:list 
                    MDListItem:

                        MDListItemHeadlineText:
                            text: "ToDo1"

                        MDListItemSupportingText:
                            text: "Supporting text"

                        MDListItemTrailingCheckbox:
                    
                    MDWidget:
            MDIconButton:
                icon: "plus"
                style: "filled"
                pos: root.width-1.5*self.width,self.height//2
                on_release: root.show