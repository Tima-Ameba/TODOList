<MyContent>
    orientation: "vertical"
    spacing:5
    MDDivider:
    MDTextField:
        id:todotext
        mode:"filled"
        MDTextFieldHintText:
            text:"Введите задачу"
        MDTextFieldHintText:
            text:"Поле обязательное"
            text:"Введите задачу"
    MDDivider:
<MainScreen>
    MDBoxLayout:
        orientation: "vertical"
        MDTopAppBar:
            type: "small"

            MDTopAppBarLeadingButtonContainer:

                MDActionTopAppBarButton:
                    icon: "account-circle-outline"

            MDTopAppBarTitle:
                text: "Задачи"
                pos_hint: {"center_x": .5}

            MDTopAppBarTrailingButtonContainer:

                MDActionTopAppBarButton:
                    icon: "dots-vertical"

        MDDivider:
            size_hint_x: 1
            pos_hint: {'center_x': .5, 'center_y': .5}
        MDFloatLayout:
            MDScrollView:
                do_scroll_x:False
                do_scroll_y:True
                MDList :
                    id:list 

            MDIconButton:
                icon: "plus"
                style: "filled"
                pos: root.width-1.5*self.width,self.height//2
                on_release: root.show_dialog()
    MDBottomSheet:
        MDBottomSheetDragHandle:
            MDBottomSheetDragHandleTitle:
                text: "Выполненные задачи"
                adaptive_height: True
                pos_hint: {"center_y": .5}
        ScrollView:
            do_scroll_x:False
            do_scroll_y:True
            MDList:
                id:donelist